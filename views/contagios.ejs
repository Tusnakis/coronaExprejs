<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head') %>
</head>

<body>
    <%- include ('partials/nav') %>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <br>
                <h3><%= tituloCasos %></h3>
                <div class="row">
                    <% for(var y = 0; y < comunidades.length; y++){ %>
                    <div class="col-4">
                        <br>
                        <h6><strong><u><%= comunidades[y] %></u></strong></h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Contagiados</th>
                                        <th>Incremento %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var x = 0; x < casos.length; x++) { %>
                                    <% if (casos[x][2] == comunidades[y]) { %>
                                    <tr>
                                        <td><%= casos[x][0] %></td>
                                        <td><%= casos[x][3] %></td>
                                        <% if (casos[x][0] == "2020-02-27") { %>
                                        <td></td>
                                        <% } else { %>
                                        <% if ((casos[x][3] - casos[x - 1][3]) * 100 / casos[x][3] == "-Infinity" 
                                            || isNaN((casos[x][3] - casos[x - 1][3]) * 100 / casos[x][3]) 
                                            ||Â (casos[x][3] - casos[x - 1][3]) * 100 / casos[x][3] < 0) { %>
                                        <td>0</td>
                                        <% } else { %>
                                        <td>
                                            <%= Math.trunc((casos[x][3] - casos[x - 1][3]) * 100 / casos[x][3]) %></td>
                                        <% } %>
                                        <% } %>
                                    </tr>
                                    <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include ('partials/script') %>

</html>